<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        xmlns:ViewModel="clr-namespace:WPFApp.ViewModel" xmlns:Utlis="clr-namespace:WPFApp.Utlis" x:Class="WPFApp.MainWindow"
        mc:Ignorable="d"
        Title="Title for Application" 
        Height="400"
        MinHeight="500"
        Width="400" 
        MinWidth="300"
        Background="LightYellow"
        >

    <Window.Resources>
        <Utlis:ConverterTemplate x:Key="ConverterTemplate"/>
    </Window.Resources>

    <Window.DataContext>
        <ViewModel:MainViewModel/>
    </Window.DataContext>



    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Button Content="Button" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75" Grid.Row="0" Grid.Column="1" Command="{Binding TestCommand}"/>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Height="22"  TextWrapping="Wrap" Text="{Binding TestProperty, UpdateSourceTrigger=PropertyChanged}" Width="120" Grid.Row="0" Grid.Column="0"/>




    </Grid>
</Window>
